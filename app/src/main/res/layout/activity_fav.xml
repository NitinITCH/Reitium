<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.example.root.reitium.activites.Fav">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="0.5"
        android:background="#222327"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PORTFOLIO"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginBottom="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/viewOne"
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"></View>

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/viewTwo"
                        android:layout_width="20dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#666666"></View>

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/ViewThree"
                        android:layout_width="20dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#666666"></View>

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/viewFour"
                        android:layout_width="20dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#666666"></View>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Espana Condos"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="633 Abbott street"
                        android:textColor="#f1f1f1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vancouver, Canada"
                        android:textColor="#f1f1f1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearFirst"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$7000,00"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Goal$1,000,00"
                            android:textAlignment="center"
                            android:textColor="#f1f1f1f1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="108"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backers"
                            android:textAlignment="center"
                            android:textColor="#f1f1f1f1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DAYS LEFT"
                            android:textAlignment="center"
                            android:textColor="#f1f1f1f1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Invest"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="now"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linerLeft"
                android:layout_width="0dp"
                android:layout_height="79dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_wallet" />

                <TextView
                    android:id="@+id/txtWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="WALLET"
                    android:textAlignment="center"
                    android:textColor="#2b2a2a"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="#f1f1f1">

                <ImageView
                    android:id="@+id/imgMain"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:background="#222327"
                    android:padding="15dp"
                    android:src="@drawable/reitiumlogo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="10dp"
                    android:background="#222327"
                    android:scaleX="1.5"
                    android:text="MARKET"
                    android:textAlignment="center"
                    android:textColor="#f1f1f1"
                    android:textSize="12sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearRight"
                android:layout_width="0dp"
                android:layout_height="79dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_chart" />

                <TextView
                    android:id="@+id/txtPor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="PORTFOLIO"
                    android:textAlignment="center"
                    android:textColor="#2b2a2a"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
